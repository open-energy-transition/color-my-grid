    symbol-size: 10; 
    symbol-fill-opacity: 1.0;
}

node[item=8270] {
    symbol-shape: rectangle;
    symbol-fill-color: #FF00FF;
    symbol-size: 10; 
    symbol-fill-opacity: 1.0;
}

node[item=8280] {
    symbol-shape: square;
    symbol-fill-color: #0B6623;
    symbol-size: 10; 
    symbol-fill-opacity: 1.0;
}

node[item=8282] {
    symbol-shape: square;
    symbol-fill-color: #008F11;
