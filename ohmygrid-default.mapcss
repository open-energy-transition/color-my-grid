/**************************/
/* Common colours classes */
/**************************/

/* Voltage-based classes */
way.voltage_no, area.voltage_no {
    color: #FFFFFF;
    fill-color: #FFFFFF;
    text-color: #FFFFFF;
    left-casing-color: #FFFFFF;
    right-casing-color: #FFFFFF;
    text-halo-color: #000000;
}

way.voltage_lt50, area.voltage_lt50 {
    color: #7c7c7c;
    fill-color: #7c7c7c;
    text-color: #7c7c7c;
    text-halo-color: #FFFFFF;
}

way.voltage_2nd_lt50, area.voltage_2nd_lt50 {
    left-casing-color: #7c7c7c;
    right-casing-color: #7c7c7c;
}

way.voltage_50-132, area.voltage_50-132 {
    color: #deb887;
    fill-color: #deb887;
    text-color: #deb887;
    text-halo-color: #000000;
}

way.voltage_2nd_50-132, area.voltage_2nd_50-132 {
    left-casing-color: #deb887;
    right-casing-color: #deb887;
}

way.voltage_132-200, area.voltage_132-200 {
    color: #ff7f50;
    fill-color: #ff7f50;
    text-color: #ff7f50;
    text-halo-color: #FFFFFF;
}

way.voltage_2nd_132-200, area.voltage_2nd_132-200 {
    left-casing-color: #ff7f50;
    right-casing-color: #ff7f50;
}

way.voltage_200-310, area.voltage_200-310 {
    color: #cd5c5c;
    fill-color: #cd5c5c;
    text-color: #cd5c5c;
    text-halo-color: #FFFFFF;
