/* GEM Per Country*/
node[Type] {
    symbol-shape: hexagon;
    symbol-fill-color:#800080;
    symbol-size: 12; 
    symbol-fill-opacity: 1.0;
}

/* WIKIDATA Per Country*/
node[type] {
    symbol-shape: square;
    symbol-fill-color:#700070;
